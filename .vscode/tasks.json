{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "javac",
            "args": [
                "-d",
                "bin",
                "-sourcepath",
                ".",
                "board/Board.java",
                "pieces/Piece.java",
                "pieces/Pawn.java",
                "App.java"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$tsc"],
            "options": {
                "cwd": "${workspaceFolder}/chess-engine"
            }
        }
    ]
}